<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.amal.fragments.MainActivity">

    <fragment
        android:id="@+id/main_categories_menu_fragment"
        class="mybillandroid.oncrete.gr.mybillandroid.Activities.MainCategoriesMenuFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.40"/>

    <fragment
        android:id="@+id/main_categories_menu_content_fragment"
        class="mybillandroid.oncrete.gr.mybillandroid.Activities.MainCategoriesMenuContentListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.60" />

</LinearLayout>
