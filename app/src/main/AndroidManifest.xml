<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mybillandroid.oncrete.gr.mybillandroid.Activities">

    <application
        android:name="mybillandroid.oncrete.gr.mybillandroid.BusinessLogic.MyBillApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddContentActivityFragment"
            android:label="@string/title_activity_add_content"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mybillandroid.oncrete.gr.mybillandroid.Activities.MainActivity" />
        </activity>
    </application>

</manifest>
